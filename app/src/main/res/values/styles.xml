<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/SplashBG</item>
        <item name="colorPrimaryDark">@color/SplashBG</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@color/SplashBG</item>
        <item name="android:windowBackground">@drawable/splash_screen_background</item>
        <item name="android:navigationBarColor">@color/SplashBG</item>
    </style>

    <style name="WelcomeScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavItemTheme">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >

    </style>

    <style name="CollapsedAppbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ExpandedAppbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/SplashBG</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CartAddToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@android:color/holo_green_light</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/ic_check_black_24dp</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>

    <style name="RegisterToast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">@color/SplashBG</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/ic_info_outline_black_24dp</item>
        <item name="stLength">SHORT</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>




</resources>
